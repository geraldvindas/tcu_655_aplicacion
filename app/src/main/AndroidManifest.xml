<?xml version="1.0" encoding="US-ASCII"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.usuario.tcu_655">

    <!-- permisos -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Pantalla de carga -->
        <activity
            android:name=".PantallaCarga"
            android:label="Mi Cuenca"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- actividad principal -->
        <activity
            android:name=".Principal"
            android:label="@string/title_activity_principal"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ContenidoAsada"
            android:label="@string/title_activity_contenido_asada"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AsadasItemsFragment"
            android:label="@string/title_activity_asadas_items_fragment"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>